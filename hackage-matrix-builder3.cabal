name:                hackage-matrix-builder3
version:             0.3
synopsis:            Hackage Matrix
license:             AGPL-3
license-file:        LICENSE
author:              Herbert Valerio Riedel
maintainer:          hvr@gnu.org
category:            Network
build-type:          Simple
extra-source-files:  ChangeLog.md
tested-with:         GHC == 8.2.1, GHC == 8.0.2
cabal-version:       >=2.0

library matrix-lib
  default-language:    Haskell2010

  hs-source-dirs:      src-lib
  exposed-modules:     Prelude.Local
                     , IndexHelper
                     , Job
                     , PkgId
                     , PlanJson
                     , WorkerApi
                     , WorkerApi.Client
                     , HackageApi
                     , HackageApi.Client

  reexported-modules:  Servant.Client
                     , System.Path.IO
                     , Network.HTTP.Client
                     , Data.UUID.Types
                     , Control.Concurrent.STM
                     , Crypto.Hash.SHA256

  -- non-locals
  build-depends:       base                 ^>= 4.9 || ^>= 4.10
                     , Cabal                ^>= 2.0
                     , aeson                ^>= 1.1
                     , async                ^>= 2.1.0
                     , bytestring           ^>= 0.10.2
                     , containers           ^>= 0.5.7.1
                     , cryptohash-sha256    ^>= 0.11.100.1
                     , deepseq              ^>= 1.4
                     , directory            ^>= 1.3.0
                     , filepath             ^>= 1.4.1.0
                     , hashable             ^>= 1.2.4
                     , http-client          ^>= 0.5.3
                     , http-types           ^>= 0.9.1
                     , io-streams           ^>= 1.3.6
                     , lens                 ^>= 4.15
                     , mtl                  ^>= 2.2.1
                     , paths                ^>= 0.1
                     , postgresql-simple    ^>= 0.5.2
                     , process              ^>= 1.4 || ^>= 1.6.1
                     , servant              ^>= 0.11
                     , servant-client       ^>= 0.11
                     , stm                  ^>= 2.4.4
                     , tar                  ^>= 0.5
                     , text                 ^>= 1.2
                     , time                 ^>= 1.6 || ^>= 1.8
                     , uuid-types           ^>= 1.0.3
  ghc-options: -Wall

----------------------------------------------------------------------------
-- executables

executable matrix-worker
  default-language:    Haskell2010
  hs-source-dirs:      src-exe
  main-is:             MainWorker.hs

  build-depends:       matrix-lib

  -- non-locals
  build-depends:       base
                     , Cabal
                     , aeson
                     , bytestring
                     , concurrent-extra     ^>= 0.7.0.10
                     , config-value         ^>= 0.6
                     , containers
                     , directory
                     , filepath
                     , http-types
                     , io-streams
                     , lens
                     , mtl
                     , servant
                     , servant-snap         ^>= 0.7.3
                     , snap                 ^>= 1
                     , snap-core            ^>= 1
                     , snap-server          ^>= 1
                     , tar
                     , text
                     , time
                     , unix                 ^>= 2.7.2

  ghc-options: -threaded -Wall -rtsopts

-- mostly for testing
executable matrix-worker-client
  default-language:    Haskell2010
  hs-source-dirs:      src-exe
  main-is:             MainWorkerClient.hs

  build-depends:       matrix-lib

  -- non-locals
  build-depends:       base
                     , Cabal
                     , aeson
                     , bytestring
                     , containers
                     , directory
                     , filepath
                     , http-types
                     , io-streams
                     , lens
                     , mtl
                     , servant
--                   , servant-docs         ^>= 0.8
                     , tar
                     , text
                     , time

  ghc-options: -threaded -Wall -rtsopts

-- Single multi-command binary which orchestrates everything & provides WebUI
executable matrix-controller
  default-language:    Haskell2010
  hs-source-dirs:      src-exe
  main-is:             Controller/Main.hs
  other-modules:       Controller.Api
                     , Controller.Cli
                     , Controller.Config
                     , Controller.Db
                     , Controller.Scheduler
                     , Controller.WebSvc

  build-depends:       matrix-lib

  -- non-locals
  build-depends:       base
                     , Cabal
                     , SafeSemaphore        ^>= 0.10.1
                     , aeson
                     , bytestring
                     , config-schema        ^>= 0.4.1
                     , containers
                     , directory
                     , filepath
                     , http-types
                     , io-streams
                     , lens
                     , mtl
                     , optparse-generic     ^>= 1.2
                     , postgresql-simple
                     , resource-pool        ^>= 0.2.3.2
                     , servant
                     , servant-snap         ^>= 0.7.3
                     , snap                 ^>= 1
                     , snap-core            ^>= 1
                     , snap-server          ^>= 1
                     , tar
                     , text
                     , time
                     , unordered-containers ^>= 0.2.7.1

--                   , product-profunctors  ^>= 0.7.1
--                   , opaleye              ^>= 0.5.1


  ghc-options: -threaded -Wall -rtsopts
